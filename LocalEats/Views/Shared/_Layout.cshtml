<!DOCTYPE html>
<html ng-app="localeatsapp" ng-cloak>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DineinArkansas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.10/angular.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Application name", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Restaurants")</li>
                    <li>@Html.ActionLink("Listing", "RestaurantList", "Restaurants")</li>
                    <li>@Html.ActionLink("Add Restaurant", "Create")</li>
                </ul>
                @Html.Partial("_LoginPartial")

                <div class="logo"><img src="../../images/logo.png" alt="logo" class="img-responsive" /></div>

            </div>

        </div>
    </div>
<div class="container-fluid body-content">
    @RenderBody()
</div>
        <div class="row footer">
            <p>Copyright &copy; @DateTime.Now.Year - Built in Arkansas With Love, <a href="https://github.com/stetteh" target="_blank">Github</a></p>
        </div>



@Scripts.Render("~/bundles/jquery")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.10/angular-route.min.js"></script>
    <script src="~/App/localeatsapp.js"></script>
    <script src="~/App/ReviewsStuff/factory.js"></script>
    <script src="~/App/ReviewsStuff/ReviewsController.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
